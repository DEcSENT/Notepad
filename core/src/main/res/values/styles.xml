<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="NoteHeaderStyle">
        <item name="android:textColor">@color/noteTitleTextColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NoteContentStyle">
        <item name="android:textColor">@color/noteContentTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/editTextColor</item>
        <item name="android:textColorHint">@color/editTextHintColor</item>
        <item name="android:backgroundTint">@color/editTextHintColor</item>
        <item name="android:textCursorDrawable">@drawable/bg_edit_text_cursor</item>
    </style>

</resources>
